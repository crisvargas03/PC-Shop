@page  "/CRUD_Computadoras/Computadoras"
@using GestorPC.Models
<h3>Modulo de Computadoras</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Color</th>
            <th>Fecha de Llegada</th>
            <th>Precio</th>
            <th>Descripcion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in getPc())
        {
            <tr>
                <th>@item.IdComputadora</th>
                <th>@item.Marca</th>
                <th>@item.Modelo</th>
                <th>@item.Color</th>
                <th>@item.FechaLlegada</th>
                <th>@item.Precio</th>
                <th>@item.Descripcion</th>
            </tr>
        }
    </tbody>
    
</table>
<center>
    <button class="btn btn-primary" style="background-color:#00C738">
        <span class="oi oi-plus" aria-hidden="true"></span>
        <a href="/CRUD_Computadoras/Create_Computadoras"> Agregar</a>
    </button>
    <button class="btn btn-primary" style="background-color:#1DB4F5">
        <span class="oi oi-pencil" aria-hidden="true"></span>
        <a href="/CRUD_Computadoras/Update_Computadoras"> Modificar</a>
    </button>
    <button class="btn btn-primary" style="background-color:#FB0000">
        <span class="oi oi-trash" aria-hidden="true"></span>
        <a href="/CRUD_Computadoras/Delete_Computadoras"> Eliminar</a>
    </button>
</center>

@code {
    List<Models.Computadoras> getPc() => new bfzebczn9tgtxtf05ivfContext().Computadoras.ToList();
}
